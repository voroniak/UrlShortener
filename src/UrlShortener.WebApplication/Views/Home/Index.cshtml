@model CreateUrlModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="jumbotron">
    <h1>URL Shortner</h1>
</div>
@if (!string.IsNullOrEmpty(ViewBag.ShortenedUrl))
{
    <span>Short Url is: </span> <a asp-action="RedirectTo" asp-route-path=@ViewBag.ShortenedUrl target="_blank">@ViewBag.UrlSchemeAndHost/@ViewBag.ShortenedUrl</a>
}
<div class="row">
    <form asp-action="Index" method="post">
        <div class="form-group">
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <input type="submit" value="Get Short Url" />
    </form>
</div>